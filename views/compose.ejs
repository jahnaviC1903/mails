    <div class="mail">
        <div class="mail_compose">
              EMAIL
             <div> COMPOSE</div>
          <div class="container mt-5">
          <form method="POST" action="send">
              <label>First Name</label>
              <input type="text" name="firstName">
              <br>
              <label>Last Name</label>
              <input type="text" name="lastName">
              <br>
              <label>Reciever's Email</label>
              <input type="text" name="email" >
              <br>
              <label>Message:</label>
              <textarea
                    id="summernote"
                    name="messages"
                    rows="8"
                    cols="80"
                    placeholder="Content:"
                  ></textarea>
              <br>
              <label class="scheduler_text" for="scheduler">Choose a mail scheduler format:</label>
              <select id="scheduler" name="scheduler">
                <option value="Reccurent">Reccurent</option>
                <option value="Weekly">Weekly</option>
                <option value="Monthly">Monthly</option>
                <option value="Yearly">Yearly</option>
              </select>
                <button type="submit">Send</button>
          </form>
          </div>
      </div>
